---
import CardContador from "../components/CardPiezasContador.jsx";
---

<div class="flex flex-col md:flex-row justify-around">
    <div class="w-full md:w-1/3 p-2">
        <CardContador
            functionUrl="contador_piezas_aprobadas"
            title="Piezas actuales"
            client:load
        />
    </div>
    <div class="w-full md:w-1/3 p-2">
        <CardContador
            functionUrl="piezas_actuales_retrasadas_conteo"
            title="Piezas retrasadas"
            client:load
        />
    </div>
    <div class="w-full md:w-1/3 p-2">
        <CardContador
            functionUrl="piezas_actuales_prioritarias_conteo"
            title="Piezas prioritarias"
            client:load
        />
    </div>
</div>
